{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Quick Access",
  "version": "0.1.1",
  "identifier": "com.ai-quick-access.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "AI Quick Access",
        "width": 800,
        "height": 150,
        "decorations": false,
        "transparent": true,
        "center": true
      },
      {
        "label": "settings",
        "title": "Settings",
        "url": "/settings",
        "width": 450,
        "height": 500,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": false,
        "resizable": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
